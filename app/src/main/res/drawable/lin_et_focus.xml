<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66ff66"></solid>
        </shape>
    </item>
    <!--将外面的Item的左右两边和上边再原有基础上放大，使其只有下边框-->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <!--只有android:width这一个选项-->
        <shape>
            <solid android:color="#55bb66"/>
            <stroke
                android:dashGap="0dp"
                android:width="1dip"
                android:dashWidth="0dp"
                android:color="#0000ff">
            </stroke>
        </shape>
    </item>
</layer-list>